@model VidlyApi.ViewModel.NewCustomerViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" />
<h2>New Customer</h2>
@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.customer.Name)
        @Html.TextBoxFor(m => m.customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div>
            @Html.LabelFor(m => m.customer.BirthDate)
        </div>
        <div>
            @Html.TextBoxFor(m => m.customer.BirthDate, new { @class = "datepicker", placeholder = "Select Birth Date" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.customer.MemberShipTypeId)
        @Html.DropDownListFor(m => m.customer.MemberShipTypeId, new SelectList(Model.MemberShipTypes, "Id", "Name"), " Select Membership Type", new { @class = "form-control" })
    </div>
    <div class="form-check">
        <label>
            @Html.CheckBoxFor(m => m.customer.IsSubscribedToNewsletter) Subscribed To News Letter
        </label>
    </div>
    @Html.HiddenFor(m => m.customer.Id);
    <button type="submit" class="btn btn-primary">Save</button>
}

@*Date Picker*@

@section Scripts {
    <script>

                $(function () {
                    $(".datepicker").datepicker({
                        dateFormat: "dd/M/yy",
                        changeMonth: true,
                        changeYear: true,
                        showOn: "both",
                        yearRange: "-60:+0",
                        buttonText: "<i class='fa fa-calendar'></i>"
                    });

                });
    </script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

}


